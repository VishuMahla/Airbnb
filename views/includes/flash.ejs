<style>
    .alert {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  word-wrap: break-word;
}

</style>

<% if(success && success.length) { %>
  <div class="alert alert-primary alert-dismissible fade show w-100 w-md-50 w-lg-40 mx-auto mt-2 text-center" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show w-100 w-md-50 mx-auto mt-2 text-center" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

