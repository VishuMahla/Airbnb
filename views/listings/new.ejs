<% layout('./layouts/boilerplate') -%>
<body>
    <h2 class="offset-2">Create a New Listing</h2>
    <div class="row">
        <div class="col-8 offset-2">
            <form method="post" action="/listings">
        <div class="mb-3">   
            <label for="title" class="form-label" >Title</label>
            <input name="title" type="text" placeholder="title" class="form-control"> 
        </div>

        <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea name="description" class="form-control"  type="text" placeholder="Enter a attractive description "></textarea>
        </div>
    
        <div class="mb-3">
            <label for="image" class="form-label" >Image URL</label>
            <input name="image" class="form-control" type="text" placeholder="Your image url/link">
        </div>
        <div class="row">
            <div class="mb-3  col-md-4">
                <label for="price" class="form-label" >Price</label>
                <input name="price" class="form-control" type="number" placeholder="1500"> 
            </div>
             <div class="mb-3  col-md-8">
                <label for="country" class="form-label" >Country</label>
                <input name="country" type="text" class="form-control"  placeholder="India"> 
            </div>
        </div>
        

       
        <div class="mb-3">
            <label for="location" class="form-label" >Location</label>
            <input name="location"  class="form-control"  type="text"    placeholder="Enter your villa location like New Delhi">

        </div>

        
        <button class="btn btn btn-outline-dark">Create</button>
    </form>
        </div>
    </div>
    
</body>
