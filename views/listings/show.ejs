<% layout('./layouts/boilerplate') -%>
<body>
    <!-- listing aa ayi  -->
    

    <div class="offset-4">
        <h3>Listing Details</h3>
        <div class="card" style="width: 25rem;">
        <img style="height: 15rem;" src="<%=listing.image.url%>" class="card-img-top " alt="listing image">
        <div class="card-body">
            <h6 class="card-title"><%= listing.title %></h6>
            <p class="card-text"><%= listing.description %>
                <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %>
                <br>
                <%= listing.location %>
                <br>
                <%= listing.country %>
            </p>
            <div class="d-flex justify-content-around">
                <a href="/listings/<%=listing.id%>/edit" class="btn btn-danger">
                    Edit
                </a>
                <form method="post" action="/listings/<%=listing.id%>?_method=DELETE"> 
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    
</body>
